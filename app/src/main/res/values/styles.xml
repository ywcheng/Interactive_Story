<resources>

    <color name="btnTextColor">#3aaaec</color>
    <color name="btnBgd">#ffffff</color>
    <!-- Base application theme. -->
    <style name="btnTheme" parent="android:Widget.Button">
        <item name="android:textColor">@color/btnTextColor</item>
        <item name="android:background">@color/btnBgd</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/btnTheme</item>
    </style>
</resources>
